<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/dark_grey"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/appTopBarLayoutLL"
        android:layout_width="match_parent"
        android:layout_height="0dp"


        android:background="@color/black"

        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/navigationSectionCL"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/appTopBarCL"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/black"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"

            tools:layout_editor_absoluteX="24dp">

            <TextView
                android:id="@+id/appTitleTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:fontFamily="@font/inter"
                android:text="LumoNote."
                android:textColor="@color/light_grey_1"
                android:textSize="22dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5">

            </TextView>

            <ImageView
                android:id="@+id/searchButtonIV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="12dp"

                android:src="@drawable/baseline_search_24"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5"
                app:tint="@color/gold" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:layout_below="@+id/appTopBarCL">

            <RelativeLayout
                android:id="@+id/topMainSectionLayoutRL"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="12dp"
                >

                <RelativeLayout
                    android:id="@+id/tagSectionLayoutRL"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="12dp"
                    android:layout_alignParentTop="true">

                    <!-- Horizontal RecyclerView -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/tagsHolderRV"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:paddingEnd="16dp"
                        android:paddingLeft="42dp"
                        android:scrollbars="none"
                        android:clipToPadding="false"/>

                    <!-- Floating Add button -->
                    <ImageView
                        android:id="@+id/tagAddButtonIV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="12dp"
                        android:src="@drawable/baseline_add_24"
                        app:tint="@color/gold"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

                <!-- Notes preview list below tags section -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/notesPreviewRV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="24dp"
                    android:paddingRight="12dp"
                    android:layout_below="@id/tagSectionLayoutRL"/>

            </RelativeLayout>


        </ScrollView>


    </RelativeLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/createNoteLayoutCL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toTopOf="@+id/navigationSectionCL"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/createButtonIV"
            android:layout_width="64dp"
            android:layout_height="64dp"

            android:background="@drawable/gold_fab"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_edit_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/dark_grey" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navigationSectionCL"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/homeViewIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/note_stack_24px"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/calendarViewIV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/gold" />

        <ImageView
            android:id="@+id/calendarViewIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:src="@drawable/baseline_calendar_month_24"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/light_grey_3" />

        <ImageView
            android:id="@+id/settingsViewIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"

            android:src="@drawable/baseline_settings_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/calendarViewIV"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/light_grey_3" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>