<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:cardCornerRadius="30dp"
    android:layout_marginBottom="12dp"
    android:layout_marginLeft="12dp"

    android:id="@+id/notePreviewCV"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/dark_grey"
        android:orientation="vertical"

        android:paddingTop="19dp"
        android:paddingRight="20dp"
        android:paddingLeft="24dp"
        android:paddingBottom="32dp"
        >


        <ImageView
            android:id="@+id/previewPinIV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingLeft="40dp"
            android:layout_gravity="end"

            android:src="@drawable/baseline_push_pin_24"
            app:tint="@color/light_grey_3"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/titlePreviewTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:maxLines="2"
                android:text="Title"
                android:textColor="@color/light_grey_1"
                android:textSize="16sp"
                android:textStyle="bold" />

        </RelativeLayout>

        <TextView
            android:id="@+id/contentPreviewTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content"
            android:fontFamily="@font/inter"
            android:textSize="14sp"
            android:textColor="@color/light_grey_1"
            android:maxLines="9"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="4dp"
        />


    </LinearLayout>

</androidx.cardview.widget.CardView>