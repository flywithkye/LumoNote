<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:background="@color/black"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ViewNoteActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        android:paddingLeft="24dp"
        android:paddingRight="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <ImageView
            android:id="@+id/backButtonIV"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentStart="true"

            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/gold" />

        <ImageView
            android:id="@+id/deleteButtonIV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"

            android:src="@drawable/baseline_delete_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/replaceButtonIV"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/light_grey_2" />

        <ImageView
            android:id="@+id/replaceButtonIV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"

            android:src="@drawable/baseline_find_replace_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/saveButtonIV"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/light_grey_2" />

        <ImageView
            android:id="@+id/saveButtonIV"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_alignParentEnd="true"

            android:src="@drawable/baseline_check_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/gold" />


    </androidx.constraintlayout.widget.ConstraintLayout>





    />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="24dp"
        android:paddingRight="14dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            >

            <TextView
                android:id="@+id/modifiedDateTV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="6dp"
                android:paddingRight="10dp"

                android:hint="Weekday, Month XX, XXXX"
                android:textColorHint="@color/light_grey_2"
                android:textColor="@color/light_grey_2"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <EditText
                android:id="@+id/noteTitleET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="18dp"
                android:paddingBottom="24dp"
                android:paddingRight="10dp"
                android:background="@android:color/transparent"

                android:hint="Title"
                android:textColor="@color/light_grey_1"
                android:textColorHint="@color/light_grey_2"
                android:textSize="26sp"
                android:textStyle="bold"

                app:layout_constraintTop_toBottomOf="@+id/modifiedDateTV" />

            <EditText
                android:id="@+id/noteContentET"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingRight="10dp"
                android:background="@android:color/transparent"
                android:gravity="top"
                android:hint="Make a note..."

                android:textColor="@color/light_grey_1"
                android:textColorHint="@color/light_grey_2"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/noteTitleET"
                tools:layout_editor_absoluteX="32dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/grey_toolbar"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toTopOf="@id/editNoteSectionCL"

        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/h1ButtonIV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"

            android:src="@drawable/format_h1_24px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/h2ButtonIV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/gold" />

        <ImageView
            android:id="@+id/h2ButtonIV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"

            android:src="@drawable/format_h2_24px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/boldButtonIV"
            app:layout_constraintStart_toEndOf="@id/h1ButtonIV"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/gold" />

        <ImageView
            android:id="@+id/boldButtonIV"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"

            android:src="@drawable/baseline_format_bold_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/italicsButtonIV"
            app:layout_constraintStart_toEndOf="@id/h2ButtonIV"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/gold" />


        <ImageView
            android:id="@+id/italicsButtonIV"
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:src="@drawable/baseline_format_italic_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/underlineButtonIV"
            app:layout_constraintStart_toEndOf="@id/boldButtonIV"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/gold" />


        <ImageView
            android:id="@+id/underlineButtonIV"
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:src="@drawable/baseline_format_underlined_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bulletButtonIV"
            app:layout_constraintStart_toEndOf="@id/italicsButtonIV"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/gold" />

        <ImageView
            android:id="@+id/bulletButtonIV"
            android:layout_width="24dp"
            android:layout_height="24dp"

            android:src="@drawable/baseline_format_list_bulleted_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/underlineButtonIV"
            app:tint="@color/gold" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/editNoteSectionCL"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="48dp"
        android:background="@drawable/gold_toolbar"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/checkBoxButtonIV"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"

            android:src="@drawable/baseline_checklist_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/dark_grey" />

        <ImageView
            android:id="@+id/imageButtonIV"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"

            android:src="@drawable/image_arrow_up_24px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textFormatButtonIV"
            app:layout_constraintStart_toEndOf="@+id/checkBoxButtonIV"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/dark_grey" />

        <ImageView
            android:id="@+id/textFormatButtonIV"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentStart="true"

            android:src="@drawable/baseline_text_fields_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/dark_grey" />


        <ImageView
            android:id="@+id/undoButtonIV"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:src="@drawable/undo_24px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/redoButtonIV"
            app:layout_constraintStart_toEndOf="@+id/textFormatButtonIV"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/dark_grey" />


        <ImageView
            android:id="@+id/redoButtonIV"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:src="@drawable/redo_24px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/dark_grey" />


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>