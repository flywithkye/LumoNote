<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/noteViewTopBarCL"
        android:layout_width="match_parent"
        android:layout_height="70dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backButtonIV"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingLeft="24dp"
            android:paddingTop="12dp"
            android:paddingRight="0dp"
            android:paddingBottom="12dp"

            android:src="@drawable/baseline_arrow_back_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/gold" />


        <ImageView
            android:id="@+id/deleteButtonIV"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="8dp"
            android:padding="12dp"

            android:src="@drawable/baseline_delete_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/replaceButtonIV"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/light_grey_1" />

        <ImageView
            android:id="@+id/replaceButtonIV"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="8dp"
            android:padding="12dp"

            android:src="@drawable/baseline_find_replace_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/pinButtonIV"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/light_grey_1" />

        <ImageView
            android:id="@+id/pinButtonIV"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:padding="12dp"

            android:src="@drawable/baseline_push_pin_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/saveButtonIV"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/light_grey_3" />

        <ImageView
            android:id="@+id/saveButtonIV"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingLeft="0dp"
            android:paddingTop="10dp"
            android:paddingRight="24dp"
            android:paddingBottom="12dp"

            android:src="@drawable/baseline_check_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:tint="@color/gold" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="24dp"
        android:paddingRight="10dp"
        android:scrollbars="none"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/noteViewTopBarCL">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

            <TextView
                android:id="@+id/dateLabelTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:paddingTop="3dp"

                android:paddingRight="10dp"
                android:text="Last Edited:"
                android:textColor="@color/light_grey_3"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </TextView>

            <TextView
                android:id="@+id/modifiedDateTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:hint="Weekday, Month XX, XXXX"

                android:paddingTop="3dp"
                android:paddingRight="10dp"
                android:textColor="@color/gold"
                android:textColorHint="@color/gold"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dateLabelTV">

            </TextView>


            <com.example.lumonote.ui.noteview.SelectableEditText
                android:id="@+id/noteTitleET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/inter"
                android:hint="Title"
                android:paddingTop="20dp"

                android:paddingRight="10dp"
                android:paddingBottom="17dp"
                android:textColor="@color/light_grey_1"
                android:textColorHint="@color/light_grey_3"
                android:textSize="22sp"
                android:textStyle="bold"

                app:layout_constraintTop_toBottomOf="@+id/modifiedDateTV" />

            <com.example.lumonote.ui.noteview.SelectableEditText
                android:id="@+id/noteContentET"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:fontFamily="@font/inter"
                android:gravity="start|top"
                android:hint="Make a note..."

                android:inputType="textMultiLine"
                android:lineSpacingMultiplier="1.2"
                android:minHeight="48dp"
                android:paddingRight="10dp"
                android:paddingBottom="150dp"
                android:textColor="@color/light_grey_1"
                android:textColorHint="@color/light_grey_3"
                android:textSize="15sp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/noteTitleET"
                tools:layout_editor_absoluteX="32dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/formatTextSectionFC"
        android:name="com.example.lumonote.ui.noteview.TextFormatFragment"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintWidth_max="550dp"

        app:layout_constraintBottom_toTopOf="@+id/editSectionFC"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/editSectionFC"
        android:name="com.example.lumonote.ui.noteview.EditInputFragment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintWidth_max="500dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>